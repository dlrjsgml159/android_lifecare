<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information.hospitalRoom"
    android:orientation="vertical"
    android:background="@drawable/camearbg"
    android:id="@+id/drugPhoto">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/logo" />

    <View
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=" 의약품 사진 촬영하기 "
        android:textColor="#000000"
        android:textSize="30dp" />


        <FrameLayout
            android:id="@+id/photo"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:layout_gravity="center">

            <SurfaceView
                android:id="@+id/v_drugPhoto"
                android:layout_width="300dp"
                android:layout_height="200dp"/>

            <ImageButton
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/btn_drugPhoto"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="115dp"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/pill1"
                />
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text=" 촬영된 사진은 겔러리에 저장됩니다."
            android:textSize="13dp"
            />


    </LinearLayout>
</LinearLayout>