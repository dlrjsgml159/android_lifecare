<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.menu"
    android:id="@+id/drawerLayout_menu"
    >
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/sidemenu_nav_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#ffffff"
        app:itemIconTint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/sidemenu_nav_menu" />

    <fragment
        android:id="@+id/sidemenu_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toRightOf="@+id/sidemenu_nav_view"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/menu_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>