<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EclipseConnect.SignInActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/logo"/>
    <View
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/id"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="아이디"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/pwd"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:hint="패스워드"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="#CEF6F5"
        android:text="로그인하기"
        android:textColor="#000000"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SNS 계정으로 로그인하기"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/jimun"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/buttonOAuthLoginImg"
            android:src="@drawable/jimun"
            />
        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:id="@+id/buttonOAuthLoginImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/naver"
            />

        <ImageView
            android:id="@+id/kakao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonOAuthLoginImg"
            android:src="@mipmap/cacao"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/btnround"
        android:text="회원가입"
        android:textSize="15dp"
        />

</LinearLayout>