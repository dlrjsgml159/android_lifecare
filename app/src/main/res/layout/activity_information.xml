<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information.information"
    android:orientation="vertical">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/logo"/>
    <View
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <Button
        android:id="@+id/btn_findMap"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/durg_button2"
        android:text="병원위치"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/btn_findPharm"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/durg_button2"
        android:text="주변 약국 찾기"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/btn_prevealRoom"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/durg_button2"
        android:text="병실 미리보기"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="hospitalRoom"
        />

</LinearLayout>