<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment.appointment"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/logo"/>
    <View
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <Button
        android:id="@+id/btn_appointment"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="#CEF6F5"
        android:text="진료 예약"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/btn_ReservationChk"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="#CEF6F5"
        android:text="예약 내역 조회"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/btn_ResultChk"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="#CEF6F5"
        android:text="진료 결과 조회"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/prescriptionChk"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="#CEF6F5"
        android:text="처방 내역 조회"
        android:textColor="#000000"
        android:textSize="20dp"
        />

</LinearLayout>